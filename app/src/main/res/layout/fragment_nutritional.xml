<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/marker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Repères nutritionnels pour 100g"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline" />

    <ImageView
        android:id="@+id/fatRound"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/round"
        android:layout_marginTop="12.5dp"
        app:layout_constraintTop_toTopOf="@id/fat"
        app:layout_constraintStart_toEndOf="@id/startGuideline" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.8g de Matières grasses / Lipides"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/marker"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <TextView
        android:id="@+id/fatQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="en faible quantité"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fat"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <ImageView
        android:id="@+id/acidityRound"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/round"
        android:layout_marginTop="12.5dp"
        app:layout_constraintTop_toTopOf="@id/acidity"
        app:layout_constraintStart_toEndOf="@id/startGuideline" />

    <TextView
        android:id="@+id/acidity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.1g d'acides gras saturés"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/fatQuantity"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <TextView
        android:id="@+id/acidityQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="en faible quantité"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/acidity"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <ImageView
        android:id="@+id/sugarRound"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/round"
        android:layout_marginTop="12.5dp"
        app:layout_constraintTop_toTopOf="@id/sugar"
        app:layout_constraintStart_toEndOf="@id/startGuideline" />

    <TextView
        android:id="@+id/sugar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5.2g de sucres"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/acidityQuantity"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <TextView
        android:id="@+id/sugarQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="en faible quantité"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sugar"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <ImageView
        android:id="@+id/saltRound"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/round"
        android:layout_marginTop="12.5dp"
        app:layout_constraintTop_toTopOf="@id/salt"
        app:layout_constraintStart_toEndOf="@id/startGuideline" />

    <TextView
        android:id="@+id/salt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5.2g de sucres"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/sugarQuantity"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />

    <TextView
        android:id="@+id/saltQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="en faible quantité"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingLeft="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/salt"
        app:layout_constraintStart_toEndOf="@+id/startGuideline" />


</androidx.constraintlayout.widget.ConstraintLayout>